@model ContactViewModel


@{
    ViewBag.Title = "Contact Us";
}

 @*To validate on realtime data fields, include the next 2 libraries
 it will send an instant message while the user are introducing the data
     this is important because, we validate the data before send it
 *@
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}



@*
    Normal Label + Input HTML
    <label>Your name: </label>
    <input name="name" />

    Using ASP + MVC, this activate the
    intelisense from IDE and helps to
    select the field name
    The asp-from in the label, helps to the user
    when clic on the label to focus on the field
    <label asp-for="Name">Your name: </label>
    <input asp-for="Name" />
*@


<div class="col-md-6 offset-md-3">
    <div class="card card-body bg-light">
        <div asp-validation-summary="ModelOnly"> </div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Your name: </label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>  @* Space to show the error*@
            </div>

            <div class="form-group">
                <label asp-for="Email">Email: </label>
                <input type="email" asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subject">Subject: </label>
                <input type="text" asp-for="Subject" class="form-control"/>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message">Message: </label>
                <textarea rows="4" asp-for="Message" class="form-control"> </textarea> 
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">

                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-envelope"></i> Send Message
                </button>

                <div class="text-success">@ViewBag.UserMessage</div>
            </div>

        </form>
    </div>
</div>